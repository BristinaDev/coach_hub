<div class="container-fluid bg-surface-light">
  <div class="gx-0 row">
    <div class="min-h-screen vstack p-6 col-lg-6">
      <div class="my-auto">
        <div class="max-w-screen-sm mx-auto">
          <h2 class="card-title text-center mb-4">Employee Login</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
            </div>
            <div class="mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>
            <div class="mb-3 text-center">
              <%= f.submit "Log in", class: "btn btn-primary next-step w-full mt-4" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="min-h-screen bg-paris-green d-none d-lg-block bg-cover-center-nr col-lg-6 p-6">
      <div class="m-auto vstack h-full justify-content-center align-items-center"> 
        <%= image_tag 'user.svg', width: '600' %>
      </div>
    </div>
  </div>
</div>
